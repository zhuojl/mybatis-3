<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.apache.ibatis.personal.param.Mapper">
  <!--<cache eviction="LRU"/>-->

  <insert id="insert">
    insert into users values(#{id}, #{name})
  </insert>

  <select id="testUserParamIndex" resultType="org.apache.ibatis.personal.param.User" >
    select id, name from users where id = #{param1} and name = #{param2}

  </select>

  <select id="testSingleParam" resultType="org.apache.ibatis.personal.param.User" >
  	select id, name from users where id = #{idName}
  </select>

  <select id="testMultiParamNoAnnotation" resultType="org.apache.ibatis.personal.param.User" >
  	select id, name from users where id = #{id} and name = #{name}
  </select>

  <select id="testUseListMethod" resultType="org.apache.ibatis.personal.param.User" >
  	select id, name from users
    where id = #{list.size}
  </select>

  <select id="testForeach" resultType="org.apache.ibatis.personal.param.User" >
  	select id, name from users
    where id in
    <foreach collection="list" open="(" close=")" item="id" separator=",">
      #{id}
    </foreach>
  </select>

</mapper>
